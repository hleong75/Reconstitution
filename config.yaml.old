input:
  lidar:
    format: ply
    min_points_per_voxel: 10
    path: data/lidar/
    voxel_size: 0.05
  streetview:
    format:
    - jpg
    - png
    path: data/streetview/
    resolution:
    - 2048
    - 1024
location:
  center_lat: 48.6439
  center_lon: 1.8294
  name: Rambouillet
  radius_km: 10
mesh_generation:
  method: poisson
  poisson_depth: 9
  poisson_scale: 1.1
  simplification_ratio: 0.9
output:
  coordinate_system: WGS84
  export_lod:
  - 1
  - 2
  - 3
  filename: rambouillet_3d_model
  format: 3ds
  include_materials: true
  path: output/
processing:
  building_extraction:
    cluster_tolerance: 0.5
    min_height: 2.5
    min_points: 100
  ground_filter:
    class_threshold: 0.5
    method: cloth_simulation
    rigidness: 3
  segmentation:
    classes:
    - ground
    - building
    - vegetation
    - other
    confidence_threshold: 0.7
    model: pointnet
    weights_path: models/segmentation_weights.pth
texture_mapping:
  interpolation: bilinear
  method: projection
  resolution: 2048
  use_streetview: true
